<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="takeMoment.alina.homepage.EditProfileActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:paddingTop="10sp"
        android:paddingBottom="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="27sp"
            android:layout_height="27sp"
            android:background="@drawable/ic_log_out"/>
        <TextView
            android:id="@+id/edit_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="wzhou"
            android:textColor="#000"
            android:textStyle="bold"
            android:textColorHint="#000"
            android:textSize="17sp"/>

    </LinearLayout>

    <takeMoment.alina.image.RoundImageView
        android:id="@+id/edit_profile_profilepic"
        android:layout_gravity="center_horizontal"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@drawable/user"/>

    <TextView
        android:paddingTop="10sp"
        android:paddingLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Логин: "
        android:textColor="#000"
        android:textSize="17sp"/>

    <EditText
        android:paddingLeft="10sp"
        android:id="@+id/edit_profile_name"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"/>

    <TextView
        android:paddingTop="10sp"
        android:paddingLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пароль: "
        android:textColor="#000"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/edit_profile_current_pw"
        android:paddingLeft="10sp"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:hint="Старый пароль:"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <EditText
        android:id="@+id/edit_profile_new_pw"
        android:paddingLeft="10sp"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:hint="Новый пароль:"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/edit_profile_new_pw2"
        android:paddingLeft="10sp"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:hint="Повторите:"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15sp" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/edit_profile_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"/>


</LinearLayout>
